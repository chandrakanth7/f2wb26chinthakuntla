extends layout

block content
  h1= title
  p Welcome to #{title} by Chandrakanth Reddy Chinthakuntla

  body
    button(type="button", class="btn btn-secondary" onclick = "doBump()") Press Me
    br
    br
    div#bump Bump the count
    br
    a(class="btn btn-info" href="chickenDish") Chicken Dishes

    script.
      let count = 0;
      let bump = 1;
      function doBump()
      {
        count += bump;
        bump += 1;
        document.getElementById("bump").innerHTML = "Count " + count + " Bump " + bump;
      }
     